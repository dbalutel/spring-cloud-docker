FROM openjdk:10-slim
VOLUME /tmp
EXPOSE 9999
ARG CONFIG_URI
ARG EUREKA_URI
ENV CONFIG_URI_ENV = ${CONFIG_URI}
ENV EUREKA_URI_ENV = ${EUREKA_URI}
ARG JAR_FILE
COPY ${JAR_FILE} app.jar
ENTRYPOINT java -DCONFIG_URI=${CONFIG_URI_ENV} -DEUREKA_URI=${EUREKA_URI_ENV} -Djava.security.egd=file:/dev/./urandom -jar /app.jar
